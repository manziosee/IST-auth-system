# IST Auth System Environment Variables
# Copy from .env.example and fill in your actual values

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/ist_auth_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=2001

# Redis Configuration
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379

# Email Configuration (Gmail example)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# OAuth2 LinkedIn Configuration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8080/oauth2/success

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Admin User Configuration
ADMIN_EMAIL=admin@ist-auth.com
ADMIN_PASSWORD=Admin123!

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000
JWT_KEY_SIZE=2048

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
