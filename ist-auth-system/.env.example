# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Email Configuration (Required for email verification)
# Use Gmail App Password or other SMTP provider
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_email_app_password

# OAuth2 Configuration (Required for LinkedIn login)
# Get from LinkedIn Developer Console
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Application URLs
BASE_URL=http://localhost:8080/api
FRONTEND_URL=http://localhost:3000

# JWT Configuration (Optional - defaults provided)
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000
JWT_KEY_SIZE=2048

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ENCRYPTION_SECRET=generate_32_character_random_secret

# Environment Profile
SPRING_PROFILES_ACTIVE=dev

# Production Only (for deployment)
# DATABASE_URL=your_production_database_url
# REDIS_URL=your_production_redis_url
# MAIL_HOST=your_production_smtp_host
# FRONTEND_URL=https://your-frontend-domain.com